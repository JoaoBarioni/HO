#include<stdio.h>
#include<stdlib.h>
float height;
float ideal;
char sex;
int main(){
 printf("Ideal weight calculator\n\n\n");
 printf("Your height:");
 scanf("%f", &height);
 printf("Your sex (M for male and F for
female):");
 scanf("%s", &sex);
 if (sex=='W'){
 ideal=(72.7 * height) - 58;
 printf("Your ideal weight is %2.2f\n",
ideal);
 }
 else {
 ideal = (62.1 * height) - 44.7;
 printf("Your ideal weight is %2.2f\n", ideal);
 }
}
