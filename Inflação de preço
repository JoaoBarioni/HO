#include<stdio.h>
#include<stdlib.h>
float p;
float b;
int main(){
 printf("Price increase");
 printf("\n\nWrite the current price: ");
 scanf("%f", &p);
 if (p<50){
 b=(p*0.05+p);
 printf("Increased value is: %.2f (5 percent
increase)\n\n", b);
 }
 else if (p>50,p<100){
 b=(p*0.10+p);
 printf("Increased value is: %.2f (10
percent increase)\n\n", b);
 }
 else {
 b=(p*0.15+p);
 printf("Increased value is: %.2f (5 percent
increase)\n\n",b);
 }
} 
